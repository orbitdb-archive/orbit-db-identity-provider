    "mocha": "^8.4.0",
    "mocha-headless-chrome": "^3.1.0",
    "rimraf": "^3.0.2",
    "standard": "^16.0.3",
    "webpack": "^4.29.1",
    "webpack-cli": "^3.2.2"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "dependencies": {
    "@ethersproject/wallet": "^5.0.10",
    "dids": "^2.1.0",
    "orbit-db-keystore": "~0.3.5"
